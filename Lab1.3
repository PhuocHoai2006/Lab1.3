class User():
    
    def __init__(self, first_name:str, last_name:str, user_name, age:int|None=None, email:str|None=None):
        self.first_name = first_name
        self.last_name = last_name
        self.username = user_name
        self.age = age
        self.email = email
        
    def describe_user(self):
        info = f"First name: {self.first_name}\n Last name : {self.last_name}\n Username: {self.username}\n Age : {self.age}\n Email: {self.email}"
        print("User information:\n", info)
        
    def greet_user(self):
        print(f"Welcome back, {self.first_name} {self.last_name}\n")

